<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background2"
    android:orientation="vertical"
    tools:context=".Adm_report">

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/back2"
        android:background="#00000000"/>


    <TextView
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="80dp"
        android:gravity="center"
        android:text="REPORT"
        android:textSize="34sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textmatrix"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select the report period"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="160dp"
        android:textSize="20sp" />

        <EditText
            android:id="@+id/start"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="60dp"
            android:layout_marginTop="190dp"
            android:hint="Start date"
            android:inputType="none" />

        <EditText
            android:id="@+id/end"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="60dp"
            android:layout_marginTop="240dp"
            android:hint="End date"
            android:inputType="none" />

    <Button
        android:id="@+id/generate"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_marginTop="300dp"
        android:background="#DA2C2C7A"
        android:text="Generate"
        android:textColor="#FDFFFFFF"
        android:textSize="18sp" />

    <TextView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="420dp"
        android:background="@drawable/box"
        android:padding="10sp"
        android:gravity="center_horizontal"
        android:text="Total students"
        android:textSize="13sp"/>

    <TextView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="420dp"
        android:background="@drawable/box"
        android:padding="10sp"
        android:gravity="center_horizontal"
        android:text="Approved appointments"
        android:textSize="13sp"/>

    <TextView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginLeft="280dp"
        android:layout_marginTop="420dp"
        android:background="@drawable/box"
        android:gravity="center_horizontal"
        android:padding="10sp"
        android:text="Cancelled appointments"
        android:textSize="13sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="53dp"
        android:layout_marginTop="470dp"
        android:id="@+id/stunum"
        android:text=""
        android:textSize="30dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="470dp"
        android:id="@+id/appnum"
        android:text=""
        android:textSize="30dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="322dp"
        android:layout_marginTop="470dp"
        android:id="@+id/cannum"
        android:text=""
        android:textSize="30dp"/>

    <Button
        android:id="@+id/print"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_marginTop="580dp"
        android:text="Print"
        android:background="#DA2C2C7A"
        android:textColor="#FDFFFFFF"
        android:textSize="18sp"
        android:visibility="gone"
        />


</RelativeLayout>